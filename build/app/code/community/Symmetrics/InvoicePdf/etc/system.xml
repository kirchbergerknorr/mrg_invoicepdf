<config>
    <sections>
        <sales_pdf>
            <groups>
                <invoice>
                    <fields>
                        <autoinvoice translate="label">
                            <label>Rechnung automatisch anlegen</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </autoinvoice>
                        <autoinvoicemail translate="label comment">
                            <label>Rechnung automatisch verschicken</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Funktioniert nur, wenn das obere Feld auch auf "ja" steht</comment>
                        </autoinvoicemail>
                        <senderaddress translate="label">
                            <label>Sender address in the header</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </senderaddress>
                        <maturity translate="label comment">
                            <label>Maturity</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>in days, if 0 immediately</comment>
                        </maturity>
                        <note translate="label">
                            <label>Notice</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </note>
                        <customeridprefix translate="label">
                            <label>Customer Prefix</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </customeridprefix>
                        <showcustomerip translate="label">
                            <label>Show customer IP in invoice</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </showcustomerip>
                        <showfooter translate="label">
                            <label>Show footer</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <default>1</default>
                        </showfooter>
                        <showinfotxt translate="label">
                            <label>Show infotext</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <default>1</default>
                        </showinfotxt>
                        <infotxt translate="label comment">
                            <label>Infotext</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>85</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <default>1</default>
                            <comment>No HTML. Please insert line breaks.</comment>
                            <depends>
                                <showinfotxt>1</showinfotxt>
                            </depends>
                        </infotxt>
                        <showinfobox translate="label">
                            <label>Zeige Infobox</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <default>1</default>
                        </showinfobox>
                        <infoboxhl translate="label">
                            <label>Infobox Ueberschrift</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>95</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <default>1</default>
                            <depends>
                                <showinfobox>1</showinfobox>
                            </depends>
                        </infoboxhl>
                        <infobox translate="label comment">
                            <label>Infobox</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <default>1</default>
                            <comment>No HTML. Please insert line breaks.</comment>
                            <depends>
                                <showinfobox>1</showinfobox>
                            </depends>
                        </infobox>
                        <showcarrier translate="label">
                            <label>Show shipping method</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <default>1</default>
                        </showcarrier>
                        <showpayment translate="label">
                            <label>Show payment method</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>65</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <default>1</default>
                        </showpayment>
                    </fields>
                </invoice>
            </groups>
        </sales_pdf>
        <sales>
            <groups>
                <identity>
                    <fields>
                        <logoposition translate="label">
                            <label>Logo position</label>
                            <frontend_type>select</frontend_type>
                            <source_model>invoicepdf/source_logoPosition</source_model>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </logoposition>
                    </fields>
                </identity>
            </groups>
        </sales>
    </sections>
</config>